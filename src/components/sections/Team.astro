---
import { Image, type ImgAttributes } from "astro:assets"

const { title, teamData} = Astro.props;

interface TeamMember {
  name: string;
  role: string;
  img: ImageMetadata
}

interface Props {
  title: string;
  teamData: TeamMember[]
}

---
<div class="relative mx-auto max-w-[85rem] my-6 md:my-12 lg:my-24 xl:my-18 px-4 pb-16 py-8 sm:px-6 lg:px-8">
    
    <!-- Title -->
    <div class="max-w-2xl mb-14 mx-auto text-center lg:mb-20">
      <h2 class="text-balance text-4xl text-center font-bold text-neutral-800  dark:text-neutral-400 lg:text-5xl ">
        <Fragment set:html={title} />
      </h2>
    </div>
    
    <!-- Member data -->
    <div class=" grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-0">
      {teamData.map((member: TeamMember) => (
        <div class="text-center">
          <Image class="rounded-xl sm:size-48 lg:size-60 mx-auto" src={member.img} alt={member.name + " " + member.role} />
          <div class="mt-2 sm:mt-4">
            <h3 class="text-sm font-medium text-orange-300 sm:text-base lg:text-lg">
              {member.name}
            </h3>
            <p class="text-xs text-gray-600 sm:text-sm lg:text-base dark:text-neutral-400">
              {member.role}
            </p>
          </div>
        </div>
      ))}
    </div>
</div>
