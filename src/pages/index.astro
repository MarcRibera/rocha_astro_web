---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";

import FAQ from "@components/sections/misc/FAQ.astro";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import MainSection from "@/components/ui/blocks/MainSection.astro";
import FeaturesStats from "@/components/sections/features/FeaturesStats.astro";
import CustomGallery from "@/components/sections/gallery/CustomGallery.astro";
import Team from "@/components/sections/Team.astro";
import Contact from "@/components/sections/Contact.astro";

---

<MainLayout>
  <span id="home"></span>
  <HeroSection
    title=`<span class="text-neutral-400"> Especialistas en reparación y venta de</span> <span
        class="text-yellow-500 dark:text-orange-400">maquinaria</span>`
    subTitle="50 años dedicados a la reparación y venta de maquinaria de construcción, jardinería, caravaning y generadors."
    primaryBtn="Contacta con nosotros"
    primaryBtnURL="#contacto"
    withReview={true}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={4}
    alt="Motor de alta potencia ideal para maquinaria de construcción y jardinería"
  />

  <span id="servicios"></span>
  <FeaturesGeneral
    title=`<span class="text-orange-500 dark:text-orange-400">Servicios</span> </br> que tenemos para ti`
    subTitle=""
    alt="Servicios en cajas flotantes"
    features={features}
  />

  <ClientsSection
    title=`Respaldados por los <span class="text-orange-400 dark:text-orange-400">líderes</span> del sector`
    subTitle="Servicio Técnico Oficial de:"
  />


  <!-- <HeroSectionAlt
    title="Empresa"
    subTitle="Fills de Rocha i López fue fundada en 1966 por Antonio Rocha Palou, comenzando con la reparación y venta de maquinaria agrícola y de jardinería. En 1990, su hijo Antonio Rocha López asumió la dirección, ampliando los servicios a generadores, automatización y maquinaria de obra pública. La empresa se consolidó como referente en el sector y actualmente, Sergi Rocha, hijo de Antonio, ha tomado el relevo, modernizando el taller y adaptándose a las nuevas tecnologías. Su enfoque innovador ha permitido a la empresa mantenerse a la vanguardia del sector."
  /> -->
  <span id="empresa"></span>
  <MainSection
  title=`<span class="text-orange-500 dark:text-orange-400">Empresa</span> con más de 50 años de experiencia`
  subTitle="Fills de Rocha i López fue fundada en 1966 por Antonio Rocha Palou, comenzando con la reparación y venta de maquinaria agrícola y de jardinería. En 1990, su hijo Antonio Rocha López asumió la dirección, ampliando los servicios a generadores, automatización y maquinaria de obra pública."
  subTitle2="La empresa se consolidó como referente en el sector y actualmente, Sergi Rocha, hijo de Antonio, ha tomado el relevo, modernizando el taller y adaptándose a las nuevas tecnologías. Su enfoque innovador ha permitido a la empresa mantenerse a la vanguardia del sector."
  btnExists={true}
  btnTitle="Contacta con nosotros"
  btnURL="#contacto"
  />

  <CustomGallery></CustomGallery>

  <FeaturesStats
      title="By the Numbers"
      subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
      mainStatTitle="96%"
      mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
      stats={[
        {
          stat: "99.8%",
          description: "project completion rate",
        },
        {
          stat: "5,000+",
          description: "successful installations",
        },
        {
          stat: "85%",
          description: "client growth year-over-year",
        },
      ]}
  />

  <span id="equipo"></span>
  <Team />

  <span id="faq"></span>

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <span id="contacto"></span>
  <Contact />


  
</MainLayout>
